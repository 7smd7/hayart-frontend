# GraphQL API URL
# This is used for both GraphQL requests and image optimization
# The hostname will be automatically extracted for Next.js image configuration

# For local development:
NEXT_PUBLIC_GRAPHQL_URL=http://hayart-backend.local/graphql

# For production, use your production backend URL:
# NEXT_PUBLIC_GRAPHQL_URL=https://your-backend-domain.com/graphql

# Frontend Site URL (for Open Graph images and metadata)
# This is the public URL where your Next.js frontend is hosted
# On Vercel, this is auto-detected, but you can override it

# For local development:
NEXT_PUBLIC_SITE_URL=http://localhost:3001

# For production:
# NEXT_PUBLIC_SITE_URL=https://hayart.mohammaddaryani.dev
